{% extends 'base.html.twig' %}

{% block title %}{% if ckey %}{{parent()}} - All Bans for {{ckey.getCkey}}{% else %}{{parent()}} - All Bans{% endif %}{% endblock %}

{% block body %}
	<h1 class="border-bottom border-4 border-dark">
	{% if ckey|default(null) %}
		All bans for {{component('PlayerBadge',{player: ckey})}}
		{% else %}
		{% if tgdb %}
			All Bans
		{% else %}
			Your Bans
		{% endif %}
		{% endif %}
	</h1>
	<div class="d-flex justify-content-center">
		{{ knp_pagination_render(pagination) }}
	</div>
	<div class="{{html_classes('card',{
	'border-4 border-warning': tgdb})}}">
		<div class="card-header d-flex justify-content-end">
			{{component('TGDBFlag',{tgdb:tgdb, message:"You're seeing all bans due to your access to TGDB"})}}
		</div>
		<div class="list-group list-group-flush">
			{% set lastdate = pagination.items[0].getBantime|date('F Y') %}
			{% for ban in pagination.items %}
				{% if ban.getbantime|date('F Y') != lastdate %}
					{% set lastdate = ban.getbantime|date('F Y') %}
					<div class="list-group-item">
						<h3 class="mb-0">{{lastdate}}</h3>
					</div>
				{% endif %}
				<div class="list-group-item list-group-item-action d-flex justify-content-start">
					<span class="badge vertical-label text-bg-{{ban.getStatus.getCssClass}}">{{ban.getStatus.value}}</span>
					<div class="ms-4 d-flex justify-content-start align-items-top gap-2">
						<div>
							<a href="{{path('ban.view',{'id':ban.getId})}}" class="fw-bold text-decoration-none link-dark">
								{% include 'ban/components/title.html.twig' %}
							</a>
							<p class="my-3">{{ban.getReason}}</p>
							<span class="d-block text-secondary" style="font-size: .7rem">
								<a href="{{path('ban.view',{'id':ban.getId})}}">#{{ban.getId}}</a>
								Placed by
								{{component('PlayerBadge',{player: ban.getAdmin})}}
								{{ban.getBantime|date}}</span>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="d-flex justify-content-center mt-3">
		{{ knp_pagination_render(pagination) }}
	</div>
{% endblock %}
