{% set wide = true %}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}
				Statbus
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,{% apply url_encode %}{% include ('assets/statbus-star.svg') %}{% endapply %}"/>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<style>

				html,
				body {
					height: 100%;
				}

				aside,
				main {
					min-height: 0; /* allows flex children to shrink and scroll properly */
				}


				#map {
					flex-grow: 1;
					min-height: 0; /* important so flex children shrink correctly */
				}
			</style>
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{{ encore_entry_script_tags('globalSearch') }}
			{{ encore_entry_script_tags('theme') }}
		{% endblock %}
		{{analytics_script|raw}}
	</head>
	<body class="d-flex flex-column vh-100">
		{% include 'base/navbar.html.twig' %}
		{% include 'base/banner.html.twig' %}
		<div class="border-bottom"> {% block subnav %}{% endblock %}
			</div>
			<div class="container-fluid flex-grow-1 d-flex flex-column">
				<div class="row flex-grow-1 flex-nowrap h-100">
					<aside class="col-12 col-md-3 col-lg-2 bg-light border-end overflow-auto p-0"> {% block sidebar %}{% endblock %}
						</aside>

						<main class="col d-flex flex-column overflow-auto p-0"> {% block content %}{% endblock %}
							</main>
						</div>
					</div>
				</body>
			</html>
