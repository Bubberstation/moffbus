<section class="border border-4 border-warning p-4" data-tgdb="true">
  <h4 class="border-bottom border-2 mt-2 pb-2 d-flex justify-content-between align-items-center">
    <span>Known Alts</span>
    {{ component('TGDBFlag', { tgdb: true }) }}
  </h4>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Ckey</th>
        <th>Added By</th>
      </tr>
    </thead>
    <tbody>
      {% for a in alts %}
        <tr>
          <td>
            <a href="{{ url('player', { ckey: a.alt }) }}" data-url="{{ path('player.popover', { ckey: a.alt }) }}">{{ a.alt }}</a>
          </td>
          <td>{{ component('PlayerBadge', { player: a.admin }) }}</td>
        </tr>
      {% else %}
        <tr>
          <td colspan="4" class="text-center text-muted">« No Alts Identified »</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</section>
