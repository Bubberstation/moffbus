<div class="list-group">
  {% for v in poll.getVotes %}
    <div id="reply-{{ v.getOption }}" class="list-group-item">
        <strong>{{ component('PlayerLink', { ckey: v.getplayer.getckey }) }}</strong> replied at {{v.getDatetime|date}}:
        <p>{{ v.getText|markdown_to_html }}</p>
    </div>
  {% endfor %}
</div>
