    {% for option, votes in poll.getResult %}
      <tr>
        <th>{{ option }}</th>
        <td>{{ votes }}</td>
        <td>%{{ (votes / poll.getVoteCount * 100)|round(2, 'floor') }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>